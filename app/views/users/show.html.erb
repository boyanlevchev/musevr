<%= render 'shared/navbar' %>

<h1>Profile</h1>
<%= @user.username %>

<% if @user.photo.attached? %>
  <%= cl_image_tag @user.photo.key, class: "avatar-large" %>
<% else  %>
  <%= image_tag "avatar_placeholder", class: "avatar-large" %>
<% end %>

<%= @user.bio %>
<% @spaces.each do |space| %>
  <%= link_to "#{space.name} #{space.description}", space_path(space) %>
  <%  if space.photo.attached? %>
    <%= cl_image_tag space.photo.key %>
  <% end %>
<% end %>

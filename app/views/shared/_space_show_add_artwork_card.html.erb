<div class="main" >
    <% if space.photo.attached? %>
      <% card_image = cl_image_path space.photo.key %>
    <% else %>
      <% card_image = "https://images.unsplash.com/photo-1459411621453-7b03977f4bfc?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1418&q=80"  %>
    <% end %>
    <button type="button" class="transparent addArtButton" style="border:0;" data-toggle="modal" data-target="#artworkModal">
      <div class="cardMain" style="width: 500px; height:500px; background-image: url(<%= card_image %>)">
        <div class= "spaces-add-art-card-text d-flex justify-content-center align-items-center h-100 w-100 flex-column">
          <h4>
            Add Artwork
          </h4>
        </div>

        <div class="h-100 w-100 d-flex justify-content-center align-items-center">
          <div style="height: 200px; width: 50px; background-color: #FCE2DB; z-index: 2;">
          </div>
        </div>
        <div class="h-100 w-100 d-flex justify-content-center align-items-center" style="position:absolute; top:0;">
          <div style="height: 50px; width: 200px; background-color: #FCE2DB; z-index: 2;">
          </div>
        </div>
      </div>
    </button>
</div>

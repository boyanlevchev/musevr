
<div class="main" >
  <%= link_to space_path(space) do  %>
      <%  if space.photo.attached? %>
        <% card_image = cl_image_path space.photo.key %>
      <% else %>
        <% card_image = image_path 'VR.jpg', class: 'card-img  w3-padding d-flex mb-4' %>
      <% end %>

    <div class="card" style="width: 500px; height:500px; background-image: url(<%= card_image %>)">
      <div class= "spaces-card-text">
        <h4 class= "name_of_space"><%= space.name %></h4>
        <h4 class= "owner_of_space"><%= space.user.username %></h4>
      </div>
    </div>
  <%end %>
</div>






<div>

  <h2 class="login-title-label" style="padding-bottom: 24px;">Log in</h2>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
          label: "EMAIL",
          required: false,
          autofocus: true,
          placeholder: "type email here...",
          input_html: { autocomplete: "email", class: "modal-input", style: "background: none; border: 0; border-bottom: 1px solid white;" },
          label_html: { class: "modal-label" } %>
      <%= f.input :password,
          label: "PASSWORD",
          required: false,
          placeholder: "type password here...",
          input_html: { autocomplete: "current-password", class: "modal-input", style: "background: none; border: 0; border-bottom: 1px solid white;" },
          label_html: { class: "modal-label" } %>
      <%= f.input :remember_me, label: "Remember me", label_html: { class: "modal-label" }, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <%= f.submit "SUBMIT", inner_text: "SUBMIT", style: "float: right; background: none; border: 0;", class: "modal-label login-submit" %>
    </div>
  <% end %>
  <%#= render "devise/shared/links" %>
</div>

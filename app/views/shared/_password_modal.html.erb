<div id="password-modal-view" style="display: none;">
  <div class="container">

    <h2 class="login-title-label" style="px;">Reset your password</h2>
    <h3 class="modal-label" style="padding-bottom: 24px;">Enter the email associated with your account, and we will send you a link to reset your password</h3>
    <div>
      <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, id: "forgottenPassword" }, remote: true) do |f| %>
        <%#= render 'shared/flashes', :object => f.object %>
        <%= f.error_notification %>
        <div class="form-inputs">
          <%= f.input :email,
              label: "EMAIL",
              required: true,
              autofocus: true,
              placeholder: "type email here...",
              input_html: { autocomplete: "email", class: "modal-input", style: "background: none; border: 0; border-bottom: 1px solid white;", id: "resetPasswordEmail" },
              label_html: { class: "modal-label" } %>
        </div>
        <div class="form-actions">
          <div class="d-flex justify-content-end">
            <div class="password-reset-errors modal-label" style="color: red;"></div>
            <%= f.submit "SUBMIT", inner_text: "Send me reset password instructions", style: "float: right; background: none; border: 0;", class: "modal-label login-submit" %>
          </div>
        </div>
      <% end %>
    </div>
    <div class="d-flex justify-content-between pt-2" >
      <%#- if devise_mapping.registerable? && controller_name != 'registrations' %>
        <%#= link_to "Don't have an account?", new_registration_path(resource_name), class: "modal-label login-submit pt-3" %>
      <%# end %>
      <!-- <button class="modal-label login-submit transparent pt-3 remove-glow" id="switch-to-signup" style="height: 20px; border: 0;" >Sign up</button> -->
      <button class="modal-label login-submit transparent pt-3 remove-glow" id="back-from-password" style="height: 20px; border: 0;" >Back to log in</button>


      <%#- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
        <%#= link_to "Forgot your password?", new_password_path(resource_name), class: "modal-label login-submit pt-3 remove-glow" %>
      <%# end %>
    </div>
  </div>
</div>

<div id="signup-modal-view" style="display:none;">

  <div class="container d-flex justify-content-between">
    <h2 class="login-title-label" style="padding: 0 0 24px 0;">Sign up </h2>

    <%#- if controller_name != 'sessions' %>
      <button class="modal-label login-submit transparent remove-glow" id="switch-to-login" style="height: 20px; border: 0;" >Already have an account?</button>
    <%# end %>
  </div>

  <div class="container">
    <div class="row">
      <div class="col-lg-6 col-sm-12 pr-5">

        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= f.error_notification %>

          <div class="form-inputs">
            <%= f.input :email,
                        label: "EMAIL",
                        required: true,
                        autofocus: true,
                        placeholder: "type email here...",
                        input_html: { autocomplete: "email", class: "modal-input", style: "background: none; border: 0; border-bottom: 1px solid white;" },
                        label_html: { class: "modal-label" } %>

            <%= f.input :password,
                        label: "PASSWORD",
                        required: true,
                        hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                        placeholder: "type password here...",
                        input_html: { autocomplete: "new-password", class: "modal-input", style: "background: none; border: 0; border-bottom: 1px solid white;" },
                        label_html: { class: "modal-label" } %>

            <%= f.input :bio,
                        as: :text,
                        label: "BIO",
                        required: false,
                        placeholder: "write a bio...",
                        input_html: { class: "modal-input", style: "background: none; border: 0; border-bottom: 1px solid white;", rows: 1 },
                        label_html: { class: "modal-label" } %>
          </div>
        </div>

        <div class="col-lg-6 col-sm-12 pr-5">
          <div class="form-inputs">
            <%= f.input :username,
                        label: "USERNAME",
                        required: true,
                        placeholder: "create a username...",
                        input_html: { class: "modal-input", style: "background: none; border: 0; border-bottom: 1px solid white;" },
                        label_html: { class: "modal-label" } %>

            <%= f.input :password_confirmation,
                        label: "CONFIRM PASSWORD",
                        required: true,
                        hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                        placeholder: "type password again...",
                        input_html: { autocomplete: "new-password", class: "modal-input", style: "background: none; border: 0; border-bottom: 1px solid white;" },
                        label_html: { class: "modal-label" } %>

            <%= f.input :photo,
                        as: :file,
                        label: "UPLOAD PROFILE PHOTO",
                        required: false,
                        placeholder: "give yourself a bio...",
                        input_html: { class: "modal-label login-submit", style: "background: none; border: 0;" },
                        label_html: { class: "modal-label" } %>

          </div>
          <div class="form-actions">
            <%= f.submit "SUBMIT", inner_text: "SUBMIT", style: "float: right; background: none; border: 0;", class: "modal-label login-submit" %>
          </div>
        <% end %>
      </div>
    </div>

    <div class="container" style="display: none;">
        <div class="d-flex flex-column align-items-center" style="margin-top: 24px; width: 100%;">
          <%- if devise_mapping.omniauthable? %>
              <div>
                <h3 class="modal-label border-top border-dark" style="margin-bottom: 36px; text-align: center; padding-top: 16px;">Or sign up with socials:</h2>
              </div>

              <div  class="d-flex justify-content-center pb-5 border-bottom border-dark">
                <%- resource_class.omniauth_providers.each do |provider| %>
                  <% if provider == :facebook %>
                    <%= link_to "", omniauth_authorize_path(resource_name, provider), class: "fab fa-facebook-f fa-3x fa-logo" %>
                    <div style="width:144px;"></div>
                  <% elsif provider == :github %>
                    <%= link_to "", omniauth_authorize_path(resource_name, provider), class: "fab fa-github fa-3x fa-logo" %>
                  <% end %>
                <% end %>
              </div>
          <% end %>
        </div>
    </div>
  </div>
</div>


<%= render partial: 'shared/navbar', locals: { space: @space, user: @user } %>

<% @title="Muse VR - Welcome to Virtual Reality" %>

<div id="loader" style="height:100vh;width:100vw;background-color:#FCE2DB;position:absolute;z-index:3;display:flex;justify-content:center;align-items: center;">
  <%= image_tag("810.gif", style: "width: 50px; height: 50px") %>
</div>

<div id="key-prompts">
  <button class="close" onclick="document.getElementById('key-prompts').style.display='none'" >close</button>
  <p>Use WASD keys or ARROW keys to move around!</p><br>
  <%= image_tag "wasd2.png", class: 'wasd'%>
  <p>Use your mouse to look around!</p>
  <% if @space.user == current_user %>
    <p>Click on artworks to edit them!</p>
    <p>Drag artworks to move them around!</p>
  <% else %>
    <p>Click on artworks to view information!</p>
  <% end %>
</div>


<div id="embeddedScene" style="display:none;">
  <input type="hidden" id="space-id" value="<%= @space.id %>">
  <% decoderPath = 'https://www.gstatic.com/draco/v1/decoders/'; %>

  <a-scene id="aframeScene" background="color: #FAFAFA" gltf-model="dracoDecoderPath: <%= decoderPath %>" embedded>
    <a-assets>
        <a-asset-item id="frame3" src="https://res.cloudinary.com/dt47helyp/raw/upload/v1589376014/final_frame_3_hsyn7d.glb">

    </a-assets>
    <!-- <a-entity gltf-model="url(https://res.cloudinary.com/dt47helyp/raw/upload/v1589335207/frame6_addgav.glb)"></a-entity> -->
    <!-- <a-gltf-model src="#frame3" position="0 0 0" scale="1 1 1"></a-gltf-model> -->
  </a-scene>
</div>


<div id="embeddedScene" style="">
  <input type="hidden" id="space-id" value="<%= @space.id %>">

  <a-scene id="aframeScene" background="color: #FAFAFA" embedded
          renderer="
                   colorManagement: true;">
    <a-assets>
        <img id="outerspace" src="https://res.cloudinary.com/dt47helyp/image/upload/v1583494818/milkyway_zbfpih.jpg">
        <img id="city" src="https://res.cloudinary.com/dt47helyp/image/upload/v1583803118/cityscape_qhvlo5.jpg">
        <img id="info" src="<%= image_path "info-circle-solid.svg" %>">
        <a-asset-item id="scene" src="<%= @space.modelURL %>">
        <!-- <a-asset-item id="frame" material="shader:flat;" src="https://raw.githubusercontent.com/boyanlevchev/threedeemodels/master/models/fancy_picture_frame/scene.gltf"> -->
        <a-asset-item id="frame" src="https://res.cloudinary.com/dt47helyp/raw/upload/v1589377747/final_frame_4_pbrzks.glb">

        <% @space.artworks.each_with_index do |artwork, index| %>
          <% if artwork.artwork_type == "3D Model" %>
            <% model_path = cl_image_path("#{artwork.photo.key}.gltf") %>
            <a-asset-item id="entity<%=artwork.id%>painting" src="<%= model_path %>">
            <%#= image_tag model_path, alt: "alttext" %>
          <% elsif artwork.artwork_type == "Image" %>
            <%= cl_image_tag artwork.photo.key, id: "entity#{artwork.id}painting", :width=>1000, :crop=>"fill", alt: "#{artwork.name}" %>
          <% end %>
        <% end %>

        <!-- <a-asset-item id="frame2" src="https://raw.githubusercontent.com/boyanlevchev/threedeemodels/master/Frames/art_painting/GLB/untitled.gltf"> -->

    </a-assets>


    <% if @space.modelURL == 'https://raw.githubusercontent.com/boyanlevchev/threedeemodels/master/models/vr_gallery_vintage_for_product_showcase_2019/scene.gltf' %>
      <a-gltf-model src="#scene" position="1 0 0" scale="0.02 0.02 0.02"></a-gltf-model>
      <a-entity light="type: ambient; color: #CCC; intensity:1.6" position="4 12 4"></a-entity>
      <a-sky src="#city"></a-sky>
      <a-entity setCamera id='cameraWrapper' position="0 0 0">
        <a-camera setCamera id='camera' position="0 2 0" look-controls></a-camera>
      </a-entity>
    <% elsif @space.modelURL == 'https://raw.githubusercontent.com/boyanlevchev/threedeemodels/master/models/vr_gallery_for_product_showcase_2019/scene.gltf' %>
      <a-gltf-model src="#scene" position="0 5 0" scale="0.04 0.04 0.04"></a-gltf-model>
      <a-entity light="type: ambient; color: #CCC; intensity: 2.7" position="4 6 4"></a-entity>
      <a-sky src="#outerspace"></a-sky>
      <a-entity setCamera id='cameraWrapper' position="0 0 0">
        <a-camera setCamera id='camera' position="0 2 0" look-controls></a-camera>
      </a-entity>
    <% elsif @space.modelURL == 'https://raw.githubusercontent.com/boyanlevchev/threedeemodels/master/models/vr_gallery_for_product_showcase_2019_outdated/scene.gltf' %>
      <a-gltf-model src="#scene" position="1 0 0" scale="0.01 0.01 0.01"></a-gltf-model>
      <a-entity light="type: ambient; color: #BBB; intensity: 7;"></a-entity>
      <a-entity light="type: directional; color: #FFF; intensity: 1;"  position="-0.5 1 1" geometry="primitive: sphere;" material="color: red" dragndrop></a-entity>
      <!-- <a-entity light="type:ambient; intensity: 1" geometry="primitive: sphere;" material="color: red" position="1 1 1" id="entity0>" dragndrop rotation-control selected scale-control toggle-side-panel dragndrop></a-entity> -->
      <!-- <a-light type="ambient" color="#222" intensity="4.5" position="1 1 1"></a-light> -->
      <a-entity setCamera id='cameraWrapper' position="0 0 0">
        <a-camera setCamera id='camera' position="0 2 0" look-controls></a-camera>
      </a-entity>
    <% elsif @space.modelURL == 'https://raw.githubusercontent.com/boyanlevchev/threedeemodels/master/models/gd55_el_a1_erikhernandez/scene.gltf' %>
      <a-gltf-model src="#scene" position="0 0 0"></a-gltf-model>
      <a-entity light="type:point; intensity:7;" position="0.2 0.2 0.2"></a-entity>
      <a-sky src="#outerspace"></a-sky>
      <a-entity setCamera id='cameraWrapper' position="0 0 0">
        <a-camera setCamera id='camera' position="0 2 0" look-controls></a-camera>
      </a-entity>
    <% elsif @space.modelURL == 'https://raw.githubusercontent.com/boyanlevchev/threedeemodels/master/models/abandoned_warehouse_-_interior_scene_comp/scene.gltf' %>
      <a-gltf-model src="#scene" position="-10 5.7 13" scale="10 10 10"></a-gltf-model>
      <a-entity light="type: ambient; color: #CCC; intensity: 4.5" position="1 1 1"></a-entity>
      <a-sky src="#city"></a-sky>
      <a-entity setCamera id='cameraWrapper' position="0 0 0">
        <a-camera setCamera id='camera' position="0 2 0" look-controls></a-camera>
      </a-entity>
    <% elsif @space.modelURL == 'https://raw.githubusercontent.com/boyanlevchev/threedeemodels/master/models/bagan_-_khayiminga_temple_interior/scene.gltf' %>
      <a-gltf-model src="#scene" position="0 1 -3" rotation="0 180 0" scale=".6 0.6 0.6"></a-gltf-model>
      <a-entity setCamera id='cameraWrapper' position="0 0 0">
        <a-camera setCamera id='camera' position="0 2 0" look-controls></a-camera>
      </a-entity>
    <% end %>

    <!-- Add all objects below -->

      <% @space.artworks.each_with_index do |artwork, id| %>
        <% if @space.user == current_user%>

              <% if artwork.artwork_type == "3D Model" %>
                <a-gltf-model src="#entity<%=artwork.id%>painting" id="entity<%=artwork.id%>" position="<%=artwork.posx%> <%=artwork.posy%> <%=artwork.posz%>" scale="<%=artwork.scale%> <%=artwork.scale%> <%=artwork.scale%>" rotation="<%=artwork.rotx%> <%=artwork.roty%> <%=artwork.rotz%>" material="emissiveIntensity: 0;" rotation-control selected scale-control toggle-side-panel dragndrop infoopen update-position></a-gltf-model>
              <% elsif artwork.artwork_type == "Image" %>
                <a-entity id="entity<%=artwork.id%>" geometry="primitive: box; depth: 0.05" material="transparent: true; opacity: 0; shader: flat; depthWrite: false" position="<%= artwork.posx ? "#{artwork.posx} #{artwork.posy} #{artwork.posz}" : "0 2 -2"%>" scale="<%=artwork.scale%> <%=artwork.scale%> <%=artwork.scale%>" rotation="<%=artwork.rotx%> <%=artwork.roty%> <%=artwork.rotz%>" rotation-control selected updatedimensions scale-control toggle-side-panel dragndrop infoopen update-position>
              <% end %>

        <% else %>

              <% if artwork.artwork_type == "3D Model" %>
                <a-gltf-model src="#entity<%=artwork.id%>painting" id="entity<%=artwork.id%>" position="<%=artwork.posx%> <%=artwork.posy%> <%=artwork.posz%>" scale="<%=artwork.scale%> <%=artwork.scale%> <%=artwork.scale%>" rotation="<%=artwork.rotx%> <%=artwork.roty%> <%=artwork.rotz%>" material="shader:flat;" selected infoopen></a-gltf-model>
              <% elsif artwork.artwork_type == "Image" %>
                <a-entity id="entity<%=artwork.id%>" geometry="primitive: box;" material="transparent: true; opacity: 0; shader: flat; depthWrite: false" position="<%= artwork.posx ? "#{artwork.posx} #{artwork.posy} #{artwork.posz}" : "0 2 -2"%>" scale="<%=artwork.scale%> <%=artwork.scale%> <%=artwork.scale%>" rotation="<%=artwork.rotx%> <%=artwork.roty%> <%=artwork.rotz%>" selected updatedimensions infoopen>
              <% end %>

        <% end %>

              <% if artwork.artwork_type == "Image" %>
                  <a-entity id="entity<%=artwork.id%>inner">
                    <a-image src="#entity<%=artwork.id%>painting" id="entity<%=artwork.id%>innerimage" material="shader:flat;" rotation="0 0 0" color="#FFFFFF" side="double" width=""></a-image>
                    <!-- <a-gltf-model src="#frame" id="entity<%=artwork.id%>innerimageframe" scale="1 1 1" material="shader:flat" rotation="0 -90 0"></a-gltf-model> -->
                    <a-gltf-model src="#frame" id="entity<%=artwork.id%>innerimageframe" position="0 0 -0.01" rotation="0 -90 0" scale="1 1 1"></a-gltf-model>

                    <a-plane id="entity<%=artwork.id%>innerimageback" position="0 0 -0.02" rotation="0 0 0" color="#FFFFFF" side="double" width=""></a-plane>
                  </a-entity>
                </a-entity>
              <% end %>

          <a-entity id="entity<%=artwork.id%>inforotator" visible="true" geometry="primitive: box; depth: 0.02" material="transparent: true; opacity: 0; shader: flat; depthWrite: false" position="<%=artwork.posx%> <%=artwork.posy%> <%=artwork.posz%>" rotation="0 <%=artwork.roty%> 0">
            <a-text id="entity<%=artwork.id%>info" visible="false" x-offset="0.02" y-offset="0.02" font="kelsonsans" color="#333333" align="left" anchor="center" baseline="bottom" width="1" font="roboto"  value="Title: <%= @space.artworks[id].name %>\n\n Description: \n <%= @space.artworks[id-1].description %>" position="-1.15 0 0" rotation="0 0 0" geometry="primitive:plane; height:0.42; width: 1" material="color: #FCE2DB; opacity:0.7; side: double" side="double"></a-text>
          </a-entity>
      <% end %>

    <%# if @space.user == current_user %>
    <div id="#side-panel" class="sidePanel hidden">
      <h2>Howdy</h2>

      <label for="size">Size</label>
      <input type="range" id="size" name="size"
        min="0" max="10" value="1" step="0.1">

      <label for="rotation-x">Rotation x</label>
      <input type="range" id="rx" name="rotation-x"
        min="0" max="360" value="0" step="1">

      <label for="rotation-y">Rotation y</label>
      <input type="range" id="ry" name="rotation-y"
        min="0" max="360" value="0" step="1">

      <label for="rotation-z">Rotation z</label>
      <input type="range" id="rz" name="rotation-z"
        min="0" max="360" value="0" step="1">
      <%#  artwork = @space.artworks.select {|artwork| artwork.name }%>
      <div class="sidePanelSave">
        <%= simple_form_for :artwork, method: :patch, html: { id: "saveArtworkForm" } do |f| %>
          <%= f.input :posx, input_html: { style: "display: none;", id: "saveposx" }, label: false %>
          <%= f.input :posy, input_html: { style: "display: none;", id: "saveposy" }, label: false %>
          <%= f.input :posz, input_html: { style: "display: none;", id: "saveposz" }, label: false %>
          <%= f.input :rotx, input_html: { style: "display: none;", id: "saverotx" }, label: false %>
          <%= f.input :roty, input_html: { style: "display: none;", id: "saveroty" }, label: false %>
          <%= f.input :rotz, input_html: { style: "display: none;", id: "saverotz" }, label: false %>
          <%= f.input :scale, input_html: { style: "display: none;", id: "savescale" }, label: false %>
          <button class="vr-save-button transparent" id="saveArtworkButton">Save</button>
          <%= f.submit style: "display: none;" %>
        <% end %>
      </div>
    </div>
  <%# end %>
  </a-scene>
</div>

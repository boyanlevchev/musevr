<%= render 'shared/navbar_landing' %>


 <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Add Artwork</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <%= render "add_artwork" %>
        </div>
       <!--  <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          <button type="button" class="btn btn-primary">Save changes</button>
        </div> -->
      </div>
    </div>
  </div>


<div class="page-container">



  <!-- <button>Launch Room</button> -->

<div class="spaces-index-heading">
    <h1><%= @space.name %></h1>
  </div>



  <div class="spaces-index-subtitle">
    <h2><%= @space.description %></h2>
  </div>

  <div class="d-flex justify-content-around" style="font-size: 20px;">
    <%= link_to "Launch Room", space_vr_path(@space), class: 'btn btn-primary' %>
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
    Add Artwork
  </button>
  </div>



  <!-- Modal -->

  <!-- modal pop over for adding artwork -->

<div  class="container show-page-container" style="width: 1100px">
    <div class="row">
      <% @space.artworks.each do |artwork| %>
        <div class="col-sm-12 col-md-12 col-lg-12 col-xl-6 d-flex justify-content-center bottom-buffer">
          <%= (render partial: 'shared/space_show_card', locals: { artwork: artwork }) %>
        </div>
      <% end %>
    </div>
  </div>


</div>
